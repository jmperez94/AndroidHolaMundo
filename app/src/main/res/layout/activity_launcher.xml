<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_marginBottom="60sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="60sp"
        android:orientation="vertical"
        android:padding="16sp">

        <ImageView
            android:id="@+id/door"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_margin="16sp"
            android:src="@drawable/saludo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtCentral"
            style="@style/st_primaryText"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_blanco" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp" />

        <Button
            android:id="@+id/btnSaludar"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:onClick="salludar"
            android:text="@string/btnSaludar"
            style="@style/st_button"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btnSalir"
        android:layout_width="52dp"
        android:layout_height="58dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        style="@style/st_image_button"
        android:src="@drawable/out"
        android:onClick="salir"/>
</RelativeLayout>